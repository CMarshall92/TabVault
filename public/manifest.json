{
  "manifest_version": 3,
  "name": "TabVault",
  "version": "1.0.0",
  "description": "Organize research into Spaces, highlight text, and manage tab groups.",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png",
    "500": "icon_500.png",
    "1024": "icon_1024.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabGroups",
    "contextMenus"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TabVault",
    "default_icon": {
      "16": "icon_16.png",
      "32": "icon_32.png",
      "64": "icon_64.png",
      "128": "icon_128.png",
      "500": "icon_500.png",
      "1024": "icon_1024.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}