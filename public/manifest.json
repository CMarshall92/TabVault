{
  "manifest_version": 3,
  "name": "TabVault",
  "version": "1.0.0",
  "description": "Organize research into Spaces, highlight text, and manage tab groups.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabGroups",
    "contextMenus"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TabVault"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}